{% extends "::base.html.twig" %}

{% block heading_breadcrumbs %}
<div class="row-fluid breadcrumbs">
    <div class="container">
        <h1 class="pull-left">Location</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="/">Home</a> <span class="divider">/</span></li>
            <li class="active">Location</li>
        </ul>
    </div><!--/container-->
</div>
{% endblock %}

{% block content_part %}


<!-- Google Map -->
<div id="map" class="map margin-bottom-40">
</div><!---/map-->
<!-- End Google Map -->

<!--=== Content Part ===-->
<div class="container">		
    <div class="row-fluid">
        <div class="span9">
            <div class="headline"><h3>Contacts</h3></div>
            <p>For further information about our company please contact:</p><br />
            <form>
                <label>Name</label>
                <input type="text" class="span7 border-radius-none" />
                <label>Email <span class="color-red">*</span></label>
                <input type="text" class="span7 border-radius-none" />
                <label>Message</label>
                <textarea rows="8" class="span10"></textarea>
                <p><button type="submit" class="btn-u">Send Message</button></p>
            </form>
        </div><!--/span9-->        
        <div class="span3">
            <!-- Contacts -->
            <div class="headline"><h3>Contacts</h3></div>
            <ul class="unstyled who margin-bottom-20">
                <li><a href="javascript:void(0);"><i class="icon-home"></i>2nd Floor Berkley Square House, Berkeley Square , London, United Kingdom, W1J 6BD</a></li>
                <li><a href="mailto:enquiries@atlashostelsplc.com"><i class="icon-envelope-alt"></i>enquiries@atlashostelsplc.com</a></li>
                <li><a href="javascript:void(0);"><i class="icon-phone-sign"></i>(+44) 0800 122 3455</a></li>
                <li><a href="javascript:void(0);"><i class="icon-globe"></i>http://www.atlashostels.com</a></li>
            </ul>
        </div><!--/span3-->
    </div><!--/row-fluid-->        
</div><!--/container-->		
<!--=== End Content Part ===-->


{% endblock %}

